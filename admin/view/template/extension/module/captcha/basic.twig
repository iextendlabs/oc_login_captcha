<fieldset>
  <div class="form-group required">
  <label for="input-captcha">{{ entry_captcha }}</label>
    <div class="col-sm-12 input-group">
      <span class="input-group-addon"><i style="user-select:none; font-size: medium;"><b> {{ captcha }}</b></i></span>
      <input type="text" name="captcha" id="input-captcha" class="form-control" />
      {% if error_captcha %}
      <div class="text-danger">{{ error_captcha }}</div>
      {% endif %}
    </div>
  </div>
</fieldset>
